<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-500">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block px-5 py-2 bg-zinc-800 w-full rounded-md"
            type="text"
            name="title"
            placeholder="Tittle...."
          />
          <textarea
            class="block px-5 py-2 mt-2 bg-zinc-800 resize-none w-full rounded-md"
            name="detail"
            placeholder="write your text here....."
          ></textarea>
          <input
            class="mt-2 rounded-md bg-blue-600 px-5 py-2"
            type="submit"
            value="create task"
          />
        </form>
      </div>
      <div class="task p-10 flex gap-4 flex-wrap">
        <% if(files.length>0){ %> <% files.forEach(function(val){ %>

        <div class="w-72 bg-zinc-800 px-3 py-4 rounded-md">
          <h1 class="text-white text-3xl tracking-tighter">
            <%=val %>
          </h1>
          <div class="justify-between flex mt-2">
          <a class="text-blue-300 inline-block" href="/file/<%= val %>">Read more..</a>
          <a class="text-zinc-300 inline-block" href="/edit/<%= val %>">Edit filename</a>
          </div>
        </div>
        <%}) %> <% } else {%>
        <h1 class="text-zinc-300">No task yet</h1>
        <% }%>
      </div>
    </div>
  </body>
</html>